<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="DauphineBank" transaction-type="RESOURCE_LOCAL">
		<non-jta-data-source>java:jboss/datasources/DauphineBank</non-jta-data-source>
		<class>model.Demande</class>
		<class>model.Entreprise</class>
		<class>model.Information</class>
		<class>model.Offre</class>
		<class>model.Personne</class>
		<class>model.Titre</class>
		<class>model.TypePersonne</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1/BDD_BANQUE"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
		</properties>
	</persistence-unit>
</persistence>
